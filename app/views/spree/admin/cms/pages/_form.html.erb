<div data-hook="admin_cms_page_form_fields">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">
        Page Information
      </h1>
    </div>

    <div class="panel-body">
      <%= f.field_container :layout_id, :class => ['form-group'] do %>
        <%= f.label :layout_id, 'Layout' %> <span class="required">*</span>
        <%= f.collection_select(:layout_id, Spree::Cms::Layout.all, :id, :name, {}, { :class => 'select2' }) %>
      <% end %>

      <%= f.field_container :category_id, :class => ['form-group'] do %>
        <%= f.label :category_id, 'Category' %> <span class="required">*</span>
        <%= f.collection_select(:category_id, Spree::Cms::Category.all, :id, :name, {}, { :class => 'select2' }) %>
      <% end %>

      <%= f.field_container :title, :class => ['form-group'] do %>
        <%= f.label :title, 'Title *' %>
        <%= f.text_field :title, :class => 'form-control' %>
      <% end %>

      <%= f.field_container :url, :class => ['form-group'] do %>
        <%= f.label :url, 'URL *' %>
        <div class="input-group">
          <span class="input-group-addon"><%= request.base_url %>/</span>
          <%= f.text_field :url, :class => 'form-control' %>
        </div>
      <% end %>

      <%= f.field_container :enabled, :class => ['checkbox'] do %>
        <%= f.label :enabled do %>
          <%= f.check_box :enabled %>
          Enable
        <% end %>
      <% end %>
      <%= f.field_container :footer_link, :class => ['checkbox'] do %>
        <%= f.label :footer_link do %>
          <%= f.check_box :footer_link %>
          Footer Link
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">
        Meta Data
      </h1>
    </div>
    <div class="panel-body">
      <%= f.field_container :meta_keywords, :class => ['form-group'] do %>
        <%= f.label :meta_keywords %>
        <%= f.text_field :meta_keywords, :class => 'form-control' %>
      <% end %>
      <%= f.field_container :meta_description, :class => ['form-group'] do %>
        <%= f.label :meta_description %>
        <%= f.text_area :meta_description, { :cols => 60, :rows => 6, :class => 'form-control' } %>
      <% end %>
    </div>
  </div>
</div>
